<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fragment="com.android.settings.bluetooth.BluetoothSettings" >

    <LinearLayout
        android:id="@+id/ll_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="23dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_wlan_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="186dp"
            android:gravity="center_vertical"
            android:text="蓝牙开关"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_flush"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="180dp"
            android:background="@drawable/shuaxin_but"
            android:gravity="center_vertical"
            android:visibility="invisible" />

        <Switch
            android:id="@+id/sw_blue_tooth"
            android:layout_width="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="440dp"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll_bluetooth"
        android:layout_marginLeft="186dp"
        android:background="#c0c0c0" />

    <ListView
        android:id="@+id/list"
        android:layout_width="440dp"
        android:layout_height="305dp"
        android:layout_below="@+id/v_line"
        android:layout_marginLeft="186dp" >
    </ListView>

    <Button
        android:id="@+id/btn_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="562dp"
        android:layout_marginTop="402dp"
        android:background="@drawable/back"
        android:onClick="doClick" />

</RelativeLayout>