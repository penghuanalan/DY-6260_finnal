<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    tools:context=".MainActivity"  >
   
   <LinearLayout 
       android:layout_width="540dp"
       android:layout_height="280dp"
       android:layout_marginLeft="38dp"
       android:orientation="vertical"
       android:background="@drawable/white"
       >
       <TextView 
           android:id="@+id/tv_new_edit"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="新建"
           android:textSize="22dp"
           android:textColor="#ffffff"
           android:layout_marginLeft="250dp"
           android:layout_marginTop="11dp"
           />
       <LinearLayout 
           android:id="@+id/rl_check_number"
           android:layout_width="match_parent"
           android:layout_height="38dp"
           android:layout_marginTop="20dp"
           android:gravity="center_vertical"
           android:orientation="horizontal"
           >
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:layout_marginLeft="12dp"
               android:text="样品名称"/>
           <RelativeLayout
           android:layout_width="160dp"
           android:layout_height="36dp"
           android:layout_marginLeft="10dp"
           android:gravity="center_vertical"
           android:background="@drawable/input_box_hei"
                > 
           <EditText
           android:id="@+id/et_sample_name"
           android:layout_width="128dp"
           android:layout_height="match_parent"
           android:background="@null"
           android:paddingLeft="5dp"
           android:gravity="center_vertical"
           android:textSize="18sp"
           android:textColor="#424242"
           android:hint="请选择或输入"
           />
            <Button 
           android:id="@+id/btn_down_arrow"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_alignParentRight="true"
           android:background="@drawable/down_arrow"/>
            </RelativeLayout>
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:layout_marginLeft="12dp"
               android:text="项目名称"/>
           <RelativeLayout
           android:layout_width="160dp"
           android:layout_height="36dp"
           android:layout_marginLeft="10dp"
           android:gravity="center_vertical"
           android:background="@drawable/input_box_hei"
                > 
           <EditText
           android:id="@+id/et_project_name"
           android:layout_width="128dp"
           android:layout_height="match_parent"
           android:background="@null"
           android:paddingLeft="5dp"
           android:gravity="center_vertical"
           android:textSize="18sp"
           android:textColor="#424242"
           android:hint="请选择或输入"
           />
            <Button 
           android:id="@+id/btn_down_arrow02"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_alignParentRight="true"
           android:background="@drawable/down_arrow"/>
            </RelativeLayout>
       </LinearLayout> 
       
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="38dp"
           android:layout_marginTop="20dp"
           android:gravity="center_vertical"
           android:orientation="horizontal"
           >
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:layout_marginLeft="30dp"
               android:text="标准值"/>
           <RelativeLayout
           android:layout_width="160dp"
           android:layout_height="36dp"
           android:layout_marginLeft="10dp"
           android:gravity="center_vertical"
           android:background="@drawable/input_box_hei"
                > 
           <EditText
           android:id="@+id/et_standard_value"
           android:layout_width="128dp"
           android:layout_height="match_parent"
           android:background="@null"
           android:paddingLeft="5dp"
           android:gravity="center_vertical"
           android:textSize="18sp"
           android:textColor="#424242"
           />
           <!-- 
            <Button 
           android:id="@+id/btn_down_arrow03"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_alignParentRight="true"
           android:background="@drawable/down_arrow"/>
            -->
            </RelativeLayout>
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:layout_marginLeft="12dp"
               android:text="标准名称"/>
           <RelativeLayout
           android:layout_width="160dp"
           android:layout_height="36dp"
           android:layout_marginLeft="10dp"
           android:gravity="center_vertical"
           android:background="@drawable/input_box_hei"
                > 
           <EditText
           android:id="@+id/et_standard_name"
           android:layout_width="128dp"
           android:layout_height="match_parent"
           android:background="@null"
           android:paddingLeft="5dp"
           android:gravity="center_vertical"
           android:textSize="18sp"
           android:textColor="#424242"
           android:hint="请选择或输入"
           />
            <Button 
           android:id="@+id/btn_down_arrow04"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_alignParentRight="true"
           android:background="@drawable/down_arrow"/>
            </RelativeLayout>
       </LinearLayout> 
       
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="38dp"
           android:layout_marginTop="20dp"
           android:gravity="center_vertical"
           android:orientation="horizontal"
           >
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:layout_marginLeft="12dp"
               android:text="判定符号"/>
           <RelativeLayout
           android:layout_width="160dp"
           android:layout_height="36dp"
           android:layout_marginLeft="10dp"
           android:gravity="center_vertical"
           android:background="@drawable/input_box_hei"
                > 
           <EditText
           android:id="@+id/et_judge_symbol"
           android:layout_width="128dp"
           android:layout_height="match_parent"
           android:background="@null"
           android:paddingLeft="5dp"
           android:gravity="center_vertical"
           android:textSize="18sp"
           android:textColor="#424242"
           android:hint="请选择或输入"
           />
            <Button 
           android:id="@+id/btn_down_arrow05"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_alignParentRight="true"
           android:background="@drawable/down_arrow"/>
            </RelativeLayout>
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:layout_marginLeft="49dp"
               android:text="单位"/>
           <RelativeLayout
           android:layout_width="160dp"
           android:layout_height="36dp"
           android:layout_marginLeft="10dp"
           android:gravity="center_vertical"
           android:background="@drawable/input_box_hei"
                > 
           <EditText
           android:id="@+id/et_unit"
           android:layout_width="128dp"
           android:layout_height="match_parent"
           android:background="@null"
           android:paddingLeft="5dp"
           android:gravity="center_vertical"
           android:textSize="18sp"
           android:textColor="#424242"
           android:hint="请选择或输入"
           />
            <Button 
           android:id="@+id/btn_down_arrow06"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_alignParentRight="true"
           android:background="@drawable/down_arrow"/>
            </RelativeLayout>
       </LinearLayout> 
        <RelativeLayout
            android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_marginTop="12dp"
             >
       <Button 
      android:id="@+id/btn_save"
      android:layout_width="120dp"
      android:layout_height="40dp"
      android:background="@drawable/save"
      android:onClick="doClick"
      android:layout_marginLeft="300dp"/>
       <Button 
           android:id="@+id/btn_back"
           android:layout_width="120dp"
           android:layout_height="40dp"
            android:layout_marginLeft="390dp"
           android:background="@drawable/back_button"/>
       </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
