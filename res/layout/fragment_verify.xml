<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id="@+id/tv_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#333333"
        android:text="警告：校准前必须手动放入空白金标卡!"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="200dp"/>
      <Button 
             android:id="@+id/btn_verify_channel_one"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/tv_notice"
             android:layout_marginLeft="186dp"
             android:layout_marginTop="90dp"
             android:onClick="doClick"
             android:background="@drawable/selector_verify_one"
             />
      <Button 
             android:id="@+id/btn_verify_channel_two"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/btn_verify_channel_one"
             android:layout_alignTop="@+id/btn_verify_channel_one"
             android:layout_marginLeft="50dp"
             android:onClick="doClick"
             android:background="@drawable/selector_verify_two"
             />
      <Button 
             android:id="@+id/btn_return"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="562dp"
             android:layout_marginTop="402dp"
             android:onClick="doClick"
             android:background="@drawable/back"
             />


</RelativeLayout>
